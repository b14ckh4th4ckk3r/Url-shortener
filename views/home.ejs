<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home Page</title>
    <style>
        body{
            font-family: 'Times New Roman', Times, serif;
        }
    </style>
</head>
<body>
    <h1>Url Shortener</h1>
    
    <div>
        <form method="POST" action="/url">
            <label>Enter your original Url</label>
            <input type="text" name="url" placeholder="https://example.com"/>
            <button type="submit">Generate</button>
        </form>
    </div>
    <br>
    <% if (locals.id) { %>
        <p>Url Generated: http://localhost:8001/demo/<%= id %></p>
    <% } %>
    <br>
    <div>
        <% if (locals.urls) { %>
         <table>
            <thead>
                <th>S.No</th>
                <th>ShortID</th>
                <th>ShortUrl</th>
                <th>Redirect</th>
                <th>Clicks</th>
            </thead>
            <tbody>
                <% urls.forEach((url,index) => { %>
                <tr>
                 <td><%= index + 1 %></td>
                 <td><%= url.shortId %></td>
                 <td>http://localhost:8001/demo/<%= url.shortId %></td>
                 <td><%= url.redirectUrl %></td>
                 <td><%= url.visitedHistory.length %></td>
                 </tr>
                <% }) %>

            </tbody>
         </table>
        <% } %>
    </div>
</body>
</html>